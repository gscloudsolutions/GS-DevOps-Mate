{
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", ".yarn/**/*"],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "rootDir": "src/",
        "module": "es2022",
        "moduleResolution": "node",
        "target": "es2022",

        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "strict": true,

        "paths": {
            "@mate/ci-cd": ["src/ci-cd/ci-cd.ts"],
            "@mate/system/logger": ["src/system/logger.ts"]
        }
    }
}
